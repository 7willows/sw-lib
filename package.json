{
    "name": "@7willows/sw-lib",
    "version": "1.0.8",
    "license": "UNLICENSED",
    "main": "dist/build.js",
    "scripts": {
        "build": "esbuild src/index.js --bundle --outfile=dist/build.js --sourcemap --jsx-factory=h --jsx-fragment=Fragment --inject:./preact-shim.js --loader:.css=text --format=esm",
        "build:dev": "esbuild test-client/index.jsx --bundle --outfile=test-client/build.js --sourcemap --jsx-factory=h --jsx-fragment=Fragment --inject:./preact-shim.js --loader:.css=text",
        "build:prod": "npm run build -- --minify --sourcemap --target=chrome58,firefox57,safari11,edge16",
        "build:watch": "npm run build -- --watch",
        "build:watch:dev": "npm run build:dev -- --watch",
        "test": "jest",
        "dev": "concurrently --kill-others \"live-server test-client\" \"npm run build:watch:dev\""
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@gitlab.com/7willows/sw-lib.git"
    },
    "bugs": {
        "url": "https://gitlab.com/7willows/sw-lib/issues"
    },
    "publishConfig": {
        "@7willows:registry": "https://gitlab.com/api/v4/projects/29228786/packages/npm/"
    },
    "homepage": "https://gitlab.com/7willows/sw-lib#readme",
    "devDependencies": {
        "@7willows/eslint-config-7w": "^1.0.0",
        "concurrently": "^6.2.1",
        "esbuild": "^0.12.26",
        "eslint": "^7.32.0",
        "jest": "^27.1.1",
        "jest-preset-preact": "^4.0.5",
        "live-server": "^1.2.1",
        "moment": "^2.29.1"
    },
    "dependencies": {
        "lodash": "^4.17.21",
        "preact": "^10.5.14",
        "preact-custom-element": "^4.2.1",
        "sanitize-html": "^2.5.1"
    },
    "jest": {
        "preset": "jest-preset-preact",
        "setupFiles": [
            "<rootDir>/tests/__mocks__/browserMocks.js",
            "<rootDir>/tests/__mocks__/setupTests.js"
        ]
    }
}
