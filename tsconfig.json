{
    "compilerOptions": {
        "declaration": true,
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "importHelpers": true,
        "module": "commonjs",
        "outDir": "lib",
        "rootDir": "src/",
        "strict": true,
        "target": "es2017",
        "esModuleInterop": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "lib": ["es2021"]
    },
    "include": [
        "src/**/*",
        "src/types.d.ts"
    ]
}
